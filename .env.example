# Пример конфигурации для Docker деплоя в Portainer

# Порт веб-интерфейса (изменен на случайный для безопасности)
PORT=8563

# URL Ollama API (для Docker compose автоматически)
OLLAMA_URL=http://ollama:11434

# Максимальное количество параллельных переводов
MAX_WORKERS=3

# Время жизни файлов (секунды, по умолчанию 1 день)
FILE_TTL=86400

# Время жизни задач (секунды, по умолчанию 1 день)
TASK_TTL=86400

# Интервал очистки старых файлов (секунды, по умолчанию 10 минут)
CLEANUP_INTERVAL=600

# Таймаут при завершении работы (секунды)
SHUTDOWN_TIMEOUT=30

# Уровень логирования (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Настройки Ollama
OLLAMA_NUM_PARALLEL=2
OLLAMA_MAX_LOADED_MODELS=1
